{
	"name": "unadopted-probes",
	"description": "The endpoint exposes information about unadopted hardware probes and enables their adoption via their unique token.",
	"icon": "extension",
	"version": "1.0.0",
	"keywords": [
		"directus",
		"directus-extension",
		"directus-extension-endpoint"
	],
	"type": "module",
	"files": [
		"dist"
	],
	"directus:extension": {
		"type": "endpoint",
		"path": "dist/index.js",
		"source": "src/index.ts",
		"host": "^10.10.0"
	},
	"scripts": {
		"build": "directus-extension build",
		"dev": "directus-extension build -w --no-minify",
		"link": "directus-extension link",
		"validate": "directus-extension validate",
		"test": "tsc --noEmit && NODE_ENV=test mocha",
		"test:dev": "NODE_ENV=test TS_NODE_TRANSPILE_ONLY=true mocha"
	},
	"dependencies": {
		"@directus/errors": "^2.0.4",
		"joi": "^18.0.1"
	},
	"devDependencies": {
		"@directus/extensions": "^3.0.11",
		"@directus/extensions-sdk": "16.0.2",
		"@directus/types": "13.5.0",
		"@types/chai": "^5.2.3",
		"@types/express": "^4.17.21",
		"@types/mocha": "^10.0.10",
		"@types/node": "^22.13.14",
		"@types/sinon": "^17.0.4",
		"@types/supertest": "^6.0.3",
		"chai": "^6.2.0",
		"express": "^4.21.2",
		"mocha": "^11.7.4",
		"sinon": "^21.0.0",
		"supertest": "^7.1.4",
		"typescript": "^5.8.3",
		"ts-node": "^10.9.2"
	}
}
