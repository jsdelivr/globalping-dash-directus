{
	"name": "gh-webhook-handler",
	"description": "This extension adds credits for one-time sponsorship and creates sponsors for recurring sponsorship",
	"icon": "extension",
	"version": "1.0.0",
	"keywords": [
		"directus",
		"directus-extension",
		"directus-custom-operation"
	],
	"type": "module",
	"directus:extension": {
		"type": "operation",
		"path": {
			"app": "dist/app.js",
			"api": "dist/api.js"
		},
		"source": {
			"app": "src/app.ts",
			"api": "src/api.ts"
		},
		"host": "^10.1.9"
	},
	"scripts": {
		"build": "directus-extension build --no-minify",
		"dev": "directus-extension build -w --no-minify",
		"link": "directus-extension link",
		"test": "tsc --noEmit && NODE_ENV=test mocha",
		"test:dev": "NODE_ENV=test TS_NODE_TRANSPILE_ONLY=true mocha"
	},
	"devDependencies": {
		"@directus/extensions": "^3.0.11",
		"@directus/extensions-sdk": "16.0.2",
		"@directus/types": "^13.2.3",
		"@types/chai": "^5.2.2",
		"@types/mocha": "^10.0.10",
		"@types/node": "^22.13.14",
		"@types/sinon": "^17.0.4",
		"chai": "^6.2.0",
		"mocha": "^11.7.4",
		"sinon": "^21.0.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.3",
		"vue": "^3.5.18"
	},
	"dependencies": {
		"lodash": "^4.17.21"
	}
}
