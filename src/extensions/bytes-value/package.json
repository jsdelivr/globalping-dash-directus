{
	"name": "bytes-value",
	"version": "1.0.0",
	"type": "module",
	"directus:extension": {
		"host": "^10.1.1",
		"type": "bundle",
		"path": {
			"app": "dist/app.js",
			"api": "dist/api.js"
		},
		"entries": [
			{
				"type": "endpoint",
				"name": "bytes",
				"source": "src/generator/index.ts"
			},
			{
				"type": "hook",
				"name": "validator",
				"source": "src/validator/index.ts"
			}
		]
	},
	"description": "This extension provides an endpoint to generate and validate bytes",
	"icon": "extension",
	"keywords": [
		"directus",
		"directus-extension",
		"directus-custom-bundle"
	],
	"scripts": {
		"build": "directus-extension build --no-minify",
		"dev": "directus-extension build -w --no-minify",
		"link": "directus-extension link",
		"add": "directus-extension add",
		"test": "tsc --noEmit && NODE_ENV=test mocha",
		"test:dev": "NODE_ENV=test TS_NODE_TRANSPILE_ONLY=true mocha"
	},
	"devDependencies": {
		"@directus/extensions": "^3.0.11",
		"@directus/extensions-sdk": "16.0.2",
		"@directus/types": "^13.2.3",
		"@types/chai": "^5.2.2",
		"@types/express": "^4.17.21",
		"@types/mocha": "^10.0.10",
		"@types/node": "^20.19.19",
		"@types/sinon": "^17.0.4",
		"@types/supertest": "^6.0.3",
		"chai": "^6.2.0",
		"express": "^4.21.2",
		"mocha": "^11.7.4",
		"sinon": "^18.0.1",
		"supertest": "^7.1.4",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@directus/errors": "^2.0.4",
		"@isaacs/ttlcache": "^1.4.1",
		"@scure/base": "^2.0.0",
		"joi": "^18.0.1"
	}
}
